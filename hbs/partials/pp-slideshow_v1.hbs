<ul class="custom-slick" data-slick='{
	"infinite":true,
	"arrows":true,
	"slidesToShow":1,
  	"slidesToScroll": 1,
	{{!-- "slidesToShow":3, --}}
  	{{!-- "slidesToScroll": 3, --}}
	"dots":true
{{!-- 	"responsive":[
		{
			"breakpoint": 641,
			"settings":{
				"slidesToShow":1,
			  	"slidesToScroll": 1
			}
		}
		] --}}
	}'>
	{{#each slides}}
		<li class="slide">
			<figure class="media-image">
				<div class="preload image-box" data-src="{{ppAssets}}{{ single_slider.image }}"{{#if alignment}} data-alignment="{{ alignment }}"{{/if}}>
				</div>
				<figcaption class="caption">
						<span class="caption-text">{{{ single_slider.info.caption }}}</span>
						<span class="credit">{{{ single_slider.info.credit }}}</span>
				</figcaption>
			</figure>
		</li>
	{{/each}}
</ul>
